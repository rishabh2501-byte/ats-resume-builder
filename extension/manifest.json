{
  "manifest_version": 3,
  "name": "ATS Resume Optimizer",
  "version": "1.0.0",
  "description": "Extract job descriptions from LinkedIn/Naukri and analyze your resume match",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://www.naukri.com/*",
    "https://naukri.com/*",
    "https://www.indeed.com/*",
    "https://indeed.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://linkedin.com/jobs/*",
        "https://www.naukri.com/*",
        "https://naukri.com/*",
        "https://www.indeed.com/*",
        "https://indeed.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
